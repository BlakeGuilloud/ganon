{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "camelcase": ["error", { "properties": "always" }],
    "func-call-spacing": ["error", "never"],
    "indent": ["error", 2],
    "no-console": "error",
    "no-debugger": "error",
    "no-multi-spaces": "error",
    "no-whitespace-before-property": "error",
    "no-trailing-spaces": "error",
    "semi": ["error", "always"],
    "space-infix-ops": ["error", {"int32Hint": false}]
  }
}
